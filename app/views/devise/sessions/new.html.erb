<div class="pl-72">
<h1 class="text-blue-700 text-4xl">Log in</h1>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :login, "Correo electrÃ³nico o Nombre de usuario", class:"text-white" %><br />
      <%= f.text_field :login, autofocus: true, autocomplete: "username email" %>
    </div>

    <div class="field ">
      <%= f.label :password, class:"text-white" %><br />
      <%= f.password_field :password, autocomplete: "current-password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field text-white">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>
    <hr class="mt-2"><br />
    <button class="actions border border-white rounded-full bg-white">
      <%= f.submit "Log in" %>
    </button>
  <% end %>

  <%= render "devise/shared/links" %>
</div>